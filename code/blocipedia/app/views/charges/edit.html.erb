<h4>Your current membership is: <%= current_user.role %></h4>
<br />

<%= render partial: 'charges/form' %>

<% if current_user.role == "standard" %>
    <%= link_to "Upgrade", charges_new_path, class: 'btn btn-primary' %>
<% end %>

<% if current_user.role == "premium" %>
    <%= link_to "Downgrade", downgrade_path, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to downgrade to a standard membership?'} %>
<% end %>